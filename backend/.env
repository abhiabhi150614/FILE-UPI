# Application
APP_NAME=FileFlow
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=fileflow-secret-key-dev-2024-change-in-production-min-32-chars
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database - Try one of these:
# Option 1: With password
# DATABASE_URL=postgresql+asyncpg://postgres:postgres123@localhost:5432/fileflow
# Option 2: Without password (trust authentication)
DATABASE_URL=postgresql+asyncpg://postgres:postgres123@localhost:5432/fileflow
# Option 3: Different user
# DATABASE_URL=postgresql+asyncpg://fileflow:fileflow@localhost:5432/fileflow
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# JWT
JWT_SECRET_KEY=jwt-secret-key-dev-2024-change-in-production-min-32-chars-secure
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS S3 (Use MinIO for local development)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
S3_BUCKET=fileflow
S3_PRESIGNED_URL_EXPIRY=3600

# Elasticsearch (Optional for development)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=fileflow_files

# Celery (Optional for development)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Email (Optional - leave empty for development)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@fileflow.com

# SMS (Optional - leave empty for development)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Security
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000"]
RATE_LIMIT_PER_MINUTE=60
MAX_FILE_SIZE_MB=100

# Monitoring (Optional - leave empty for development)
SENTRY_DSN=

# Storage Quotas
FREE_STORAGE_GB=5
PREMIUM_STORAGE_GB=50
FAMILY_STORAGE_GB=200
